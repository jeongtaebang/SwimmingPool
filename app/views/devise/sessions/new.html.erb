<div class="login-box">

  <h2>로그인</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="field">
      <%= f.label :email, "이메일" %><br />
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :password, "비밀번호" %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "로그인 유지" %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "로그인" %>
    </div>

    <div class="actions facebook-login">
      <%= link_to omniauth_authorize_path(resource_name, :facebook) do %>
        <%= image_tag "/assets/facebook_icon.png", height: 12 %> 페이스북으로 로그인
      <% end %>
    </div>

    <div class="actions naver-login">
      <%= link_to omniauth_authorize_path(resource_name, :naver) do %>
        <%= image_tag "/assets/favicon.ico", height: 12 %> 네이버로 로그인
      <% end %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
