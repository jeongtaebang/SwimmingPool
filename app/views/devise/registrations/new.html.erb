<div class="login-box">

  <h2>회원가입</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <div class="field">
      <%= f.label :email, "이메일" %><br />
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :name, "이름" %><br />
      <%= f.text_field :name, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :password, "비밀번호" %>
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "비밀번호 확인" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>

    <div class="actions">
      <%= f.submit "회원가입" %>
    </div>

    <div class="actions facebook-login">
      <%= link_to omniauth_authorize_path(resource_name, :facebook) do %>
        <%= image_tag "/assets/facebook_icon.png", height: 12 %> 페이스북으로 가입
      <% end %>
    </div>

    <div class="actions naver-login">
      <%= link_to omniauth_authorize_path(resource_name, :naver) do %>
        <%= image_tag "/assets/favicon.ico", height: 12 %> 네이버로 가입
      <% end %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>